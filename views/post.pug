    style.
      .post-img{
        background: #222 url('../../users/#{post.UserId}/images/#{post.Image}') no-repeat;
        width: 100%;
        height: 30rem;
        background-origin: border-box;
        background-size: cover;
      }
      .comment-profile-pic{
        height: 100px;
        width: 100px;
        border: 1px solid #222;
        border-radius: 50%;
        background: #464646 url('../../users/#{post.UserId}/images/#{post.Image}') center no-repeat;
        background-size: contain;
        margin-right: 0.8rem;
      }
  body.profile
