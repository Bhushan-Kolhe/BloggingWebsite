doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title BLOG-IT | Sign Up
    link(rel='stylesheet', href='../bower-components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='../css/font-awesome.min.css')
    link(rel='stylesheet', href='../css/styles.css')
  body
    nav.navbar.navbar-expand.navbar-light
      a.navbar-brand(style='color:#fff;', href='#') BLOG-IT
      div
        ul#my-nav-list.navbar-nav
          form.form-inline.my-lg-0.my-nav-item(method='POST',action='/search')
            .box
              .container-1
                span.icon
                  i.fa.fa-search
                input#search(type='search', placeholder='Search...')
          li.nav-item.active.my-nav-item
            button.btn.btn-sm.btn-outline-primary.my-2.my-sm-0 Surprise Me!
          li.nav-item.active.my-nav-item
            button.btn.btn-sm.btn-outline-danger.my-2.my-sm-0 Trending!
    section#sign-up-form
      .container
        .Signupform
          <div class="alert alert-danger fade show invalid-info-alert" role="alert">
            <strong>Error</strong> Please Enter valid information.
          </div>
          != messages('messages', locals)
          if errors
            each error, i in errors
              div(class="alert alert-danger") #{error.msg}
          else if error
            div(class="alert alert-danger") #{error}
          form#user-sign-up-form(method='POST', action='/users/register')
            .form-group
              label(for='Name') Name
              input#FirstName.form-control(type='text', name='FirstName', placeholder='FirstName')
              br
              input#LastName.form-control(type='text', name='LastName', placeholder='LastName')
            .form-group
              label(for='Email1') Email address
              input#Email1.form-control(type='email', name='Email', placeholder='Email')
            .form-group
              label(for='Password1') Password
              input#Password1.form-control(type='password', name='Password', placeholder='Password')
            .form-group
              input#Password2.form-control(type='password', name='Password2', placeholder='Re-enter password')
            .form-group
              label(for='Birthday') Birthday:
              input#Birthday.form-control(type='text', name='bday' placeholder="mm/dd/yyyy")
            .form-group.Gender
              label
                label Gender:
                input.GenderCheck(type='radio', name='gender', value='male', checked='')
                |  Male
                input.GenderCheck(type='radio', name='gender', value='female')
                |  Female
            button.btn.btn-danger(type='submit',value='submit') Sign Up
    section
      #footer-reveal
    section#footer.sign-up-footer
      .container
        .row.footer-top
          .col.col-lg-6.footer-left-items
            ul
              li.my-footer-item
                a(href='#') Support
              li.my-footer-item
                a(href='#') Terms
              li.my-footer-item
                a(href='#') Our Team
              li.my-footer-item
                a(href='#') Privacy
              li.my-footer-item
                a(href='#') Help
          .col.col-lg-6.footer-right-items
            h2 Contact Us.
            form#feedback-form(method='POST', action='/feedback')
              .form-group
                textarea#feedback-textarea(name='feedbackContent', rows='2', cols='75', wrap='hard')
              .form-group
                input#feedback-email.form-control(type='email', placeholder='Enter email', name='feedbackEmail')
                small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
              button.btn.btn-primary(type='submit') Submit
        div
          .footer-line
        .footer-bottom
          br
          h2 BLOG-IT
    script(src='../bower-components/jquery/dist/jquery.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
    script(src='../bower-components/bootstrap/dist/js/bootstrap.min.js')
    script(src='../js/Validation.js')
